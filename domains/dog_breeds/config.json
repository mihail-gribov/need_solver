{
  "domain": {
    "id": "dog_breeds",
    "name": "Dog Breeds Recommendation",
    "description": "Match user needs to dog breeds using 4-valued fuzzy logic"
  },
  "llm": {
    "default_model": "gpt-5.1",
    "fallback_model": "gpt-4.1",
    "temperature": {
      "extraction": 0,
      "generation": 0.7
    },
    "timeout": 120,
    "max_retries": 2
  },
  "extraction": {
    "use_web_search": true,
    "web_search_tool": "web_search_preview_2025_03_11"
  },
  "questions": {
    "per_need": 5,
    "answer_options": {
      "true": {
        "id": "true",
        "label_ru": "Да",
        "label_en": "Yes",
        "description": "User confirms this need",
        "fuzzy_mapping": {"t": 1.0, "f": 0.0}
      },
      "false": {
        "id": "false",
        "label_ru": "Нет",
        "label_en": "No",
        "description": "User denies this need",
        "fuzzy_mapping": {"t": 0.0, "f": 1.0}
      },
      "unknown": {
        "id": "unknown",
        "label_ru": "Не знаю",
        "label_en": "Don't know",
        "description": "User is uncertain",
        "fuzzy_mapping": {"t": 0.0, "f": 0.0}
      },
      "independent": {
        "id": "independent",
        "label_ru": "Мне всё равно",
        "label_en": "Don't care",
        "description": "Need is not relevant to user",
        "fuzzy_mapping": null
      }
    }
  },
  "fuzzy": {
    "library": "fuzzy4",
    "states": ["true", "false", "unknown", "conflict"],
    "threshold": {
      "high": 0.7,
      "low": 0.3
    }
  },
  "explanation": {
    "language": "Russian",
    "top_breeds": 3,
    "max_constraints": 3,
    "max_preferences": 4,
    "min_need_score": 3
  },
  "paths": {
    "content": "content",
    "source": "source",
    "extracted": "extracted",
    "fuzzy": "fuzzy",
    "questions": "questions",
    "prompts": "prompts",
    "scripts": "scripts"
  }
}
